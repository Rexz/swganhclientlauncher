    	<TextBlock x:Name="lblSkins" Margin="0,0,109.302,55.223" TextWrapping="Wrap" Foreground="{DynamicResource LightFill}" FontFamily="{DynamicResource FontFamily}" Text="{Binding LoadingSkins}" FontWeight="Bold" OpacityMask="#64000000" VerticalAlignment="Bottom" FontSize="16" Height="17" HorizontalAlignment="Right" Width="158.152"/>
    	<TextBlock x:Name="lblServers" Margin="0,49,109.302,34" TextWrapping="Wrap" Foreground="{DynamicResource LightFill}" FontFamily="{DynamicResource FontFamily}" Text="{Binding LoadingServers}" FontWeight="Bold" OpacityMask="#64000000" FontSize="16" HorizontalAlignment="Right" Width="158.152"/>
