    		<Path x:Name="pthSecond" Fill="{DynamicResource FunctionText}" Stretch="Fill" Margin="104.996,4,202.003,4" Data="M24.669318,0 L129.66932,0 105,20 0,20 z" Width="117" d:LayoutOverrides="HorizontalMargin" Opacity="0"/>
